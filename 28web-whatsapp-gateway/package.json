{
  "name": "28web-whatsapp-gateway",
  "version": "1.0.0",
  "description": "WhatsApp Gateway microservice for 28web Hub SaaS platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc && copyfiles -u 1 src/**/*.json dist",
    "start": "node dist/server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "load-test": "node tests/performance/run-load-tests.js",
    "stress-test": "node tests/performance/run-stress-test.js",
    "all-tests": "node tests/performance/run-all-tests.js"
  },
  "keywords": [
    "whatsapp",
    "gateway",
    "microservice",
    "28web",
    "hub",
    "saas",
    "multi-tenant"
  ],
  "author": "28web Development Team",
  "license": "UNLICENSED",
  "dependencies": {
    "axios": "^1.6.2",
    "bull": "^4.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-prom-bundle": "^6.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "morgan": "^1.10.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^10.3.1",
    "prom-client": "^14.2.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "whatsapp-web.js": "^1.34.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.11",
    "@types/qrcode": "^1.5.6",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
